<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text="@string/Road_number_485"
            android:textSize="@dimen/x30"/>

        <EditText
            android:id="@+id/sensor_485_0"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/bg_edittext"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/sensor_0_button"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_button"
            android:text="@string/setting"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_layout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Sensor_serial_number"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/sensor_num_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="5dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Power_up_delay_time"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_time_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Device_MODBUS_address"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_modbus_addr_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Start_register_address"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_addr_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:hint="0x"
                    android:digits="0123456789abcdefABCDEF"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Register_length"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_len_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:hint="0x"
                    android:digits="0123456789abcdefABCDEF"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/save_button_0"
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="@string/Save_Settings"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text="@string/Road_number_485_1"
            android:textSize="@dimen/x30"/>

        <EditText
            android:id="@+id/sensor_485_1"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/sensor_1_button"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_button"
            android:text="@string/setting"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Sensor_serial_number"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/sensor_num_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="5dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Power_up_delay_time"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_time_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Device_MODBUS_address"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_modbus_addr_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Start_register_address"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_addr_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:hint="0x"
                    android:digits="0123456789abcdefABCDEF"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Register_length"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_len_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:hint="0x"
                    android:digits="0123456789abcdefABCDEF"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/save_button_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="@string/Save_Settings"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</ScrollView>