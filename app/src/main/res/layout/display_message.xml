<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#f4f4f4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/biaoti"
        android:id="@+id/top_message">

        <ImageView
            android:id="@+id/display_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/jpush_ic_richpush_actionbar_back"/>
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Message_display"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/time_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="10sp"
                    android:layout_marginTop="@dimen/x20"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginBottom="@dimen/x16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#dfdfdf">
            </View>
            
            <TextView
                android:id="@+id/display_message"
                android:layout_width="@dimen/x540"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x80"
                android:layout_marginTop="@dimen/x120"
                android:textSize="14sp"
                android:textColor="#323232"
                android:lineSpacingExtra="@dimen/x14"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>