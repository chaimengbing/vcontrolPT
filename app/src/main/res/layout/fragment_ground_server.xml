<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/gprs_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:padding="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_number"
                    android:textColor="@color/black"/>

                <RadioGroup
                    android:id="@+id/server_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/server_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_bg"
                        android:text="@string/server_1"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/server_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:button="@drawable/radio_bg"
                        android:checked="false"
                        android:text="@string/server_2"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/server_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:button="@drawable/radio_bg"
                        android:checked="false"
                        android:text="@string/server_3"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/server_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:button="@drawable/radio_bg"
                        android:checked="false"
                        android:text="@string/server_4"
                        android:textColor="@color/black"/>
                </RadioGroup>


            </LinearLayout>

            <include layout="@layout/item_gprs"/>

            <TextView
                android:id="@+id/service_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x40"
                android:padding="10dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/x35"/>

        </LinearLayout>


    </ScrollView>




</RelativeLayout>