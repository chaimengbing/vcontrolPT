<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/top_shoda1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.25"
                android:background="@mipmap/banner_image2"
                android:elevation="5dp"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/layout_button1"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/x4"
                android:layout_margin="@dimen/x8"
                android:background="@mipmap/equipment_down"
                android:elevation="5dp"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/grid_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_marginTop="@dimen/x30"
                    android:horizontalSpacing="@dimen/x5"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:textColor="#323232"
                    android:verticalSpacing="@dimen/x5"></GridView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x4"
                android:layout_margin="@dimen/x8"
                android:background="@mipmap/sys_down_version"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lru_3300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x30"
                    android:drawablePadding="@dimen/x5"
                    android:padding="@dimen/x10"
                    android:drawableTop="@mipmap/wru_2100"
                    android:text="LRU_3300"></TextView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>