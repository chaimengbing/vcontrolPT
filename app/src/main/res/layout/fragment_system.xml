                        android:layout_marginRight="12dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/layout_image1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="9dp"
                android:background="@mipmap/sys_down_version"
                android:elevation="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/app_ver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Version_Information"
                        android:textColor="#323232"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="@dimen/x210"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:textColor="#919191"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/app_ver1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Check_updates"
                        android:textColor="#323232"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/version1"
                        android:layout_width="@dimen/x210"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7.5dp"
                        android:gravity="center"
                        android:textColor="#919191"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_image3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/layout_image3"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="9dp"
                android:background="@mipmap/drop_back"
                android:elevation="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/drop_out"
                    android:layout_width="@dimen/x330"
                    android:layout_height="@dimen/x64"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x18"
                    android:background="@mipmap/drop_button" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>