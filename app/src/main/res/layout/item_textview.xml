<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">
    

    <TextView
            android:id="@+id/item_textview"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x62"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:gravity="center"
        android:background="@mipmap/hui_back"
        android:textColor="#ffffff"/>


    <LinearLayout
        android:layout_width="@dimen/x620"
        android:layout_height="@dimen/x220"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x20"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bai_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VControl"
            android:layout_marginTop="@dimen/x36"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="15sp"
            android:textColor="#323232"
            />
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="#323232"
            android:lines="1"
            android:singleLine="true"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:text="点击查看全文"
            android:textSize="12sp"
            android:textColor="#959494"/>

    </LinearLayout>
</LinearLayout>