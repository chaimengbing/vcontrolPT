<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="卡类型配置"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/sim_config_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sim_config_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_bg"
                    android:text="中国移动"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/sim_config_telecom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="中国电信"
                    android:textColor="@color/black"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP通道"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/ip_channel_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ip_channel_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_bg"
                    android:text="@string/server_1"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/ip_channel_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="@string/server_2"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/ip_channel_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="@string/server_3"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/ip_channel_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="@string/server_4"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/ip_channel_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="5"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/ip_channel_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:button="@drawable/radio_bg"
                    android:checked="false"
                    android:text="6"
                    android:textColor="@color/black"/>
            </RadioGroup>
        </LinearLayout>




        <TextView
            android:id="@+id/ip_channel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="IP通道1"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:text="@string/ip_"
                android:gravity="right"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ip_channel_edittext"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/bg_edittext" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/x80"
                    android:layout_height="wrap_content"
                    android:text="@string/port"
                    android:gravity="right"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/port_channel_edittext"
                    android:layout_width="@dimen/x400"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:maxLines="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number" />

                <Button
                    android:id="@+id/ip_channel_button"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x60"
                    android:text="@string/setting"
                    android:layout_marginLeft="@dimen/x40"
                    android:background="@drawable/bg_button"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="FTP地址端口"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:text="@string/ip_"
                android:gravity="right"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ftp_addr_edittext"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/bg_edittext" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/x80"
                    android:layout_height="wrap_content"
                    android:text="@string/port"
                    android:gravity="right"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ftp_port_edittext"
                    android:layout_width="@dimen/x400"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:maxLines="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number" />

                <Button
                    android:id="@+id/ftp_addr_button"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x60"
                    android:text="@string/setting"
                    android:layout_marginLeft="@dimen/x40"
                    android:background="@drawable/bg_button"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lp2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="拍照间隔"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/photo_interval_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/bg_edittext"
                    android:inputType="numberDecimal"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.3"
                    android:text="@string/min"
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.8">

                    <Button
                        android:id="@+id/photo_interval_button"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x60"
                        android:background="@drawable/bg_button"
                        android:text="@string/setting"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="录像保存到TF卡"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/tf_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:background="@drawable/spinner_bg"
                    android:entries="@array/customer_select"
                    android:padding="5dp"
                    android:spinnerMode="dropdown"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6">

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/start_up"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="开机"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/shut_down"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="关机"
                    android:textColor="@color/black"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_weight="1">

                <Button
                    android:id="@+id/take_photo"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="拍照并保存上传"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/clear_sd_card"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="清空SD卡"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/ftp_imagelist_button"
                android:layout_width="@dimen/x280"
                android:layout_height="@dimen/x80"
                android:background="@drawable/bg_button"
                android:text="查看服务器图片"
                android:textColor="@color/black"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>