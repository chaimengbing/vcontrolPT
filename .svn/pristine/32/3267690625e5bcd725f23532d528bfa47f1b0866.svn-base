<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sensor_0"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text="1#485路数："
            android:textSize="@dimen/x30"/>

        <EditText
            android:id="@+id/sensor_485_0"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:padding="5dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传感器序号"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/sensor_type_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:entries="@array/ground_collect_time"
                    android:padding="5dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上电延时时间"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_time_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备MODBUS地址"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_modbus_addr_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="起始寄存器地址"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_addr_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="寄存器长度"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sensor_len_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/save_button_1"
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/bg_button"
                    android:text="保存设置"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>